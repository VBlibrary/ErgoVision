/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "fusion_h";
    compatible = "fusion_h";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zmk,kscan = &composite_kscan;
        zmk,matrix_transform = &transform;
        zmk,steno_flash = &spi_flash;
    };

	transform: transform {
		compatible = "zmk,matrix-transform";
		columns = <12>;
		rows = <4>;
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(3,5) RC(3,4) RC(3,3) RC(3,2) RC(3,1) RC(3,0)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(4,5) RC(4,4) RC(4,3) RC(4,2) RC(4,1) RC(4,0)
                        RC(2,0) RC(2,1) RC(2,2)  RC(2,5) RC(2,4) RC(2,3)
RC(5,0)
		>;
	};

    composite_kscan: kscan {
        compatible = "zmk,kscan-composite";
        label = "composite_kscan";
        rows = <6>;
        columns = <6>;
        matrix_kscan {
            label = "matrix_kscan";
            kscan = <&matrix_kscan>;
        };
        magnet_kscan {
            label = "magnet_kscan";
            kscan = <&magnet_kscan>;
            row-offset = <5>;
        };
    };

    magnet_kscan: kscan1 {
        compatible = "zmk,kscan-gpio-direct";
        label = "magnet_kscan";
        input-gpios = <&gpio0 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };

    matrix_kscan: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "matrix_kscan";
		diode-direction = "row2col";
		row-gpios
            = <&gpio1  3 GPIO_ACTIVE_HIGH>
            , <&gpio1  1 GPIO_ACTIVE_HIGH>
            , <&gpio1  2 GPIO_ACTIVE_HIGH>
            , <&gpio0 29 GPIO_ACTIVE_HIGH>
            , <&gpio0 28 GPIO_ACTIVE_HIGH>
            ;
        col-gpios
            = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0  3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0  2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    leds {
        compatible = "gpio-leds";
        blue_led: led_0 {
            gpios = <&gpio0 31 GPIO_ACTIVE_HIGH>;
            label = "Blue LED";
        };
    };

    buttons {
        compatible = "gpio-keys";
        button {
            gpios = <&gpio0 30 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
            label = "button";
        };
    };

    vbatt {
        compatible = "zmk,battery-voltage-divider";
        label = "BATTERY";
        io-channels = <&adc 2>;
        output-ohms = <2000000>;
        full-ohms = <(2000000 + 2000000)>;
    };
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&usbd {
    status = "okay";
};


&flash0 {
    /*
     * For more information, see:
     * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
     */
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        sd_partition: partition@0 {
            label = "mbr";
            reg = <0x00000000 0x00001000>;
        };
        code_partition: partition@1000 {
            label = "code_partition";
            reg = <0x00001000 0x000d3000>;
        };

        /*
         * The flash starting at 0x000d4000 and ending at
         * 0x000f3fff is reserved for use by the application.
         */

        /*
         * Storage partition will be used by FCB/LittleFS/NVS
         * if enabled.
         */
        storage_partition: partition@d4000 {
            label = "storage";
            reg = <0x000d4000 0x00020000>;
        };

        boot_partition: partition@f4000 {
            label = "adafruit_boot";
            reg = <0x000f4000 0x0000c000>;
        };
    };
};

&spi0 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    sck-pin = <32>;
    mosi-pin = <22>;
    miso-pin = <41>;

    cs-gpios = <&gpio0 10 GPIO_ACTIVE_HIGH>, <&gpio0 7 GPIO_ACTIVE_LOW>;
    sharp: sharp_lcd@0 {
        compatible = "sharp,ls0xx";
        label = "DISPLAY";
        reg = <0>;
        status = "okay";
        spi-max-frequency = <1000000>;
        height = <168>;
        width = <144>;
        extcomin-gpios = <&gpio0 9 GPIO_ACTIVE_HIGH>;
        extcomin-frequency = <60>;
        disp-en-gpios = <&gpio1 6 GPIO_ACTIVE_HIGH>;
    };
    spi_flash: flash@1 {
        compatible = "jedec,spi-nor";
        status = "okay";
        reg = <1>;
        spi-max-frequency = <8000000>;
        label = "MT25Q";
        jedec-id = [ef 40 18];
        size = <0x8000000>;
        has-dpd;
        t-enter-dpd = <3000>;
        t-exit-dpd = <30000>;
    };
};
