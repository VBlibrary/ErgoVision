#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include "../steno/impl/zmk/steno_keys.h"

#define BASE 0
#define BLE  1
#define LOCK 2

/ {
    keymap0: keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
&stn STN_S_ &stn STN_S_ &stn STN_T_ &stn STN_P_ &stn STN_H_ &stn STN_STAR &stn STN_STAR &stn STN__F &stn STN__P &stn STN__L &stn STN__T &stn STN__D
&stn STN_S_ &stn STN_S_ &stn STN_K_ &stn STN_W_ &stn STN_R_ &stn STN_STAR &stn STN_STAR &stn STN__R &stn STN__B &stn STN__G &stn STN__S &stn STN__Z
                &mo 1 &stn STN_A &stn STN_O &stn STN_E &stn STN_U &stn STN_NUM
&mo LOCK
                >;
        };
        ble {
            bindings = <
&none &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_CLR &none &none &none &none &none &none
&none &none &out OUT_BLE &out OUT_USB &none &none &none &none &none &none &none &none
                &none &none &none &none &none &trans
&trans
                >;
        };
        lock {
            bindings = <
&none &none &none &none &none &none &none &none &none &none &none &none
&none &none &none &none &none &none &none &none &none &none &none &none
                &trans &none &none &none &none &none
&trans
                >;
        };
    };
};
